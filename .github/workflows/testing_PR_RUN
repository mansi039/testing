name: My GitHub Action Workflow

on:
  pull_request:
    types:
      - closed
    branches:
      - development
      - release
      - master

jobs:
  job1:
    runs-on: ubuntu-latest
    steps:
      - name: Step 1
        run: echo "Job 1 executed"

  job2:
    runs-on: ubuntu-latest
    steps:
      - name: Step 2
        run: echo "Job 2 executed"

  job3:
    if: >
      github.event_name == 'pull_request' &&
      github.event.pull_request.merged == true &&
      (contains(github.head_ref, 'user') && github.base_ref == 'development')
    runs-on: ubuntu-latest
    steps:
      - name: Step 3
        run: echo "Job 3 executed"

  job4:
    if: >
      github.event_name == 'pull_request' &&
      github.event.pull_request.merged == true &&
      (github.head_ref == 'development' && github.base_ref == 'release')
    runs-on: ubuntu-latest
    steps:
      - name: Step 4
        run: echo "Job 4 executed"


  job5:
    if: >
      github.event_name == 'pull_request' &&
      github.event.pull_request.merged == true &&
      (contains(github.head_ref, 'hotfix') && github.base_ref == 'master')
    runs-on: ubuntu-latest
    steps:
      - name: Step 6
        run: echo "Job 6 executed"

  job6:
    if: >
      github.event_name == 'pull_request' &&
      github.event.pull_request.merged == true &&
      (contains(github.head_ref, 'hotfix') && github.base_ref == 'master')
    runs-on: ubuntu-latest
    steps:
      - name: Step 7
        run: echo "Job 7 executed"
